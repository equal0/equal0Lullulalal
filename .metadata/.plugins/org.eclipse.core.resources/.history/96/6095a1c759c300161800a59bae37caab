package client.gui;

import java.awt.BorderLayout;
import java.awt.Dimension;
import java.awt.FlowLayout;
import java.awt.Font;
import java.awt.Toolkit;

import javax.swing.ImageIcon;
import javax.swing.JDialog;
import javax.swing.JLabel;
import javax.swing.JPanel;

import vo.Category;
import vo.Member;

public class AskRestaurant extends JDialog{
	
	private JPanel north;
	private JPanel center;
	private JPanel recommend;
	private ImageIcon image;
	private JLabel lbl_area;
	private JLabel lbl_type;
	private JLabel lbl_score;
	private JLabel lbl_location;
	
	public AskRestaurant(Category category, Member member) {
		
		Dimension screenSize = Toolkit.getDefaultToolkit().getScreenSize();
		
		this.setTitle(member.getId() + "배고파요!");
		this.setBounds(screenSize.width - 260, screenSize.height - 190, 260, 190);
		
		//north 라벨
		north = new JPanel();
		FlowLayout flowLayout = (FlowLayout) north.getLayout();
		flowLayout.setAlignment(FlowLayout.LEFT);
		getContentPane().add(north, BorderLayout.NORTH);
		
		lbl_area = new JLabel(category.getLocation().getSigungu().toString() + "의");
		lbl_area.setFont(new Font("나눔고딕", Font.BOLD, 12));
		
		String score = null;
		if (category.getEvaluation().getAverage() >= 1.0) {
			score = "1.0";
		} else if (category.getEvaluation().getAverage() >= 2.0) {
			score = "2.0";
		} else if (category.getEvaluation().getAverage() >= 3.0) {
			score = "3.0";
		} else if (category.getEvaluation().getAverage() >= 4.0) {
			score = "4.0";
		} else if (category.getEvaluation().getAverage() >= 5.0) {
			score = "5.0";
		}
		lbl_score = new JLabel("평점" + score + "이상");
		lbl_score.setFont(new Font("나눔고딕", Font.BOLD, 12));
		
		
		String type = null;
		if (category.getType() == 1) {
			type = "한식";
		} else if (category.getType() == 2) {
			type = "중식";
		} else if (category.getType() == 3) {
			type = "일식";
		} else if (category.getType() == 4) {
			type = "양식";
		}
		lbl_type = new JLabel(type + "맛집");
		lbl_type.setFont(new Font("나눔고딕", Font.BOLD, 12));
	
		
		this.setVisible(true);
	}
}
