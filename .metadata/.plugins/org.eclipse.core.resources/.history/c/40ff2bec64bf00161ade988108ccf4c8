package client;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JFrame;
import java.awt.BorderLayout;
import java.awt.Dimension;

import javax.swing.JPanel;
import javax.swing.JScrollBar;

import java.awt.FlowLayout;
import java.awt.GridBagLayout;

import javax.swing.ImageIcon;
import javax.swing.JButton;
import java.awt.GridLayout;
import javax.swing.JComboBox;
import javax.swing.JScrollPane;
import javax.swing.JTextField;
import javax.swing.SwingConstants;
import javax.swing.JTextArea;
import javax.swing.JLabel;

public class insertUserEvaluations extends JFrame{
	private JLabel score5;
	private JLabel score4;
	private JLabel score3;
	private JLabel score2;
	private JLabel score1;
	
	public insertUserEvaluations() {
		this.setBounds(500, 200, 250, 270);
		this.setDefaultCloseOperation(this.EXIT_ON_CLOSE);
		getContentPane().setLayout(new BorderLayout(0, 0));
		
		north();
		south();
		center();
		this.setVisible(true);
	}
	
	public void north(){
		JPanel north = new JPanel();
		getContentPane().add(north, BorderLayout.NORTH);
		north.setLayout(new GridLayout(0,5));

		//ImageIcon image = new ImageIcon("img/spoon.gif");
		score5 = new JLabel("5점");
		score5.setHorizontalAlignment(SwingConstants.CENTER);
		//label.setIcon(image);
		north.add(score5);
		
		score4 = new JLabel("4점");
		score4.setHorizontalAlignment(SwingConstants.CENTER);
		north.add(score4);
		
		score3 = new JLabel("3점");
		score3.setHorizontalAlignment(SwingConstants.CENTER);
		north.add(score3);
		
		score2 = new JLabel("2점");
		score2.setHorizontalAlignment(SwingConstants.CENTER);
		north.add(score2);
		
		score1 = new JLabel("1점");
		score1.setHorizontalAlignment(SwingConstants.CENTER);
		north.add(score1);
	}
	
	public void center(){
		JPanel center = new JPanel();
		getContentPane().add(center, BorderLayout.CENTER);
		
		JScrollPane scroll = new JScrollPane();
		JTextField comments = new JTextField();
		comments.setEditable(true);
		comments.setSize(230, 180);
		scroll.setViewportView(comments);
		center.add(scroll);
	}
	
	public void south(){
		
	}
	
	class Action implements ActionListener{

		@Override
		public void actionPerformed(ActionEvent e) {
			
		}
		
	}
	
	public static void main(String[] args) {
		new insertUserEvaluations();
	}
}
